<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_ebebeb"
        android:paddingBottom="4dp"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:text="2018/01/02"
        android:textColor="@color/_888888"
        android:textSize="16sp"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:text="12:30"
            android:textColor="@color/_343434"
            android:textSize="16sp" />
        <!-- 麻将 -->
        <!-- 鑫自摸 -->
        <!-- 岑放铳给鑫 -->

        <!-- 红十 -->
        <!-- 鑫、岑 双关 刚、东 [反][晒] -->
        <!-- 鑫、岑 单关 刚、东 [反][晒] -->
        <!-- 鑫、岑 平 刚、东 -->
        <TextView
            android:id="@+id/tv_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="0dp"
            android:paddingTop="16dp"
            android:text="鑫糊 岑放铳"
            android:textColor="@color/_343434"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_basked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/red_ten_basked"
            android:text="晒"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_double_red_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/red_ten_double"
            android:text="双红十"
            android:textColor="@color/red_ten"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_reversed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/red_ten_reverse"
            android:text="反关"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

</LinearLayout>